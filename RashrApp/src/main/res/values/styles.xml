<resources>

    <style name="Rashr" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/golden</item>
        <item name="colorPrimary">@color/custom_blue</item>
        <item name="colorPrimaryDark">@color/darker_blue</item>
        <item name="colorAccent">@color/golden</item>
        <item name="android:textStyle">italic</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorButtonNormal">?attr/colorPrimaryDark</item>
        <item name="android:dialogTheme">@style/Rashr.Dialog</item>
    </style>

    <style name="Rashr.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="android:textStyle">italic</item>
        <item name="android:windowBackground">@color/background_material_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Rashr.Button" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Rashr.Text">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Rashr.Dialog" parent="Theme.AppCompat.Dialog">
    </style>
</resources>